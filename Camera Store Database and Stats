-- Display store items by ascending price.
SELECT * FROM camera_store
ORDER BY price asc;

--What is the average price of items found at the Broadway Location?
SELECT AVG(price) "Average Item Price"
FROM camera_store
where store_location='Broadway Blvd'; 
